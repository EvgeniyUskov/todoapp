<h1>Create a new todo</h1>

<% if @todo.errors.any? %>
    <h4>Errors: </h4>
    <ul>
        <% @todo.errors.full_messages.each do |err| %>
            <li>
                <%= err %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @todo do |f| %>
    <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back to list", todos_path(@todo) %>